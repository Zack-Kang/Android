<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="272dp"
    android:layout_height="332dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/color_white_ffffff"
        android:orientation="vertical">

        <include layout="@layout/dialog_filter_title" />

        <com.malalaoshi.android.view.SlideViewPager
            android:id="@+id/filter_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp">
        </com.malalaoshi.android.view.SlideViewPager>

    </LinearLayout>

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/circle_indicator"
        style="@style/mala.indicator_small"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp" />

    <ImageView
        android:id="@+id/iv_dialog_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_grade_dialog" />


</RelativeLayout>