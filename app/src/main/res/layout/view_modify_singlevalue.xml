<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_gray_f2f2f2"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.malalaoshi.android.core.view.TitleBarView
        android:id="@+id/titleBar"
        app:cusTitleTextSize="@dimen/text_size_large"
        app:cusTitleTextColor="@color/color_black_333333"
        app:cusLeftShow="true"
        app:cusLeftBackgroud="@drawable/core__back_btn"
        app:cusRightShow="true"
        app:cusRightText="保存"
        app:cusRightTextSize="@dimen/text_size_small"
        app:cusRightTextColor="@color/color_blue_82b4d9"
        android:background="@color/color_white_ffffff"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>

    <EditText
        android:id="@+id/et_value"
        style="@style/mala.widget.usercenter.item.text"
        android:background="@color/color_white_ffffff"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:gravity="left|center"
        android:singleLine="true"
        android:text="信息" />

</LinearLayout>